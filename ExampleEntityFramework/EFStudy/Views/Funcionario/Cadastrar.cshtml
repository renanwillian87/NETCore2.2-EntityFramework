@model EFStudy.Models.Funcionario
@{
    ViewData["Title"] = "Funcionario";
}

<h2>Cadastro de funcionários</h2>

<form class="form-horizontal" asp-controller="Funcionario" asp-action="Salvar" method="post">
    <input type="hidden" asp-for="@Model.Id"/>
    <input type="text" class="form-control" asp-for="@Model.Nome" placeholder="Nome"/>
    <input type="number" class="form-control" asp-for="@Model.Salario" placeholder="Salário"/>
    <input type="text" class="form-control" asp-for="@Model.CPF" placeholder="CPF"/>
    <input class="btn btn-success" type="submit" value="Cadastrar"/>
</form>